extends layout

block content

	// Page Header
	header(class="intro-header" style="background-image: url('/images/about-bg.jpg')")
		div.container
			div.row
				div(class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1")
					div.site-heading
						h1= title
						hr.small
						span(class="subheading") #{description}

	// Main Content
	div.container
		div.row
			div(class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1")
				p Want to get in touch with me? Fill out the form below to send me a message and I will try to get back to you within 24 hours!

				form(name="sentMessage" id="contactForm")
					div(class="row control-group")
						div(class="form-group col-xs-12 floating-label-form-group controls")
							label Name
							input(type="text" class="form-control" placeholder="Name" id="name" required data-validation-required-message="Please enter your name.")
							p(class="help-block text-danger")
					div(class="row control-group")
						div(class="form-group col-xs-12 floating-label-form-group controls")
							label Email Address
							input(type="email" class="form-control" placeholder="Email Address" id="email" required data-validation-required-message="Please enter your email address.")
							p(class="help-block text-danger")
					div(class="row control-group")
						div(class="form-group col-xs-12 floating-label-form-group controls")
							label Phone Number
							input(type="tel" class="form-control" placeholder="Phone Number" id="phone" required data-validation-required-message="Please enter your phone number.")
							p(class="help-block text-danger")
					div(class="row control-group")
						div(class="form-group col-xs-12 floating-label-form-group controls")
							label Message
							textarea(rows="5" class="form-control" placeholder="Message" id="message" required data-validation-required-message="Please enter a message.")
							p(class="help-block text-danger")
					br
					div(id="success")
					div.row
						div(class="form-group col-xs-12")
							button(type="submit" class="btn btn-default") Send



